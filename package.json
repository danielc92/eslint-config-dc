{
  "name": "eslint-config-platypus",
  "version": "1.17.1",
  "description": "reusable linting config for eslint",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielc92/eslint-config-dc.git"
  },
  "scripts": {
    "release": "release-it",
    "test": "jest",
    "prepublishOnly": "npm run test"
  },
  "files": [
    "LICENSE",
    "main.js",
    "react-addon.js",
    "rxjs-addon.js",
    "src/configs/base.js"
  ],
  "keywords": [
    "eslint",
    "eslint config"
  ],
  "author": "Daniel Corcoran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielc92/eslint-config-dc/issues"
  },
  "homepage": "https://github.com/danielc92/eslint-config-dc#readme",
  "peerDependencies": {
    "eslint": ">= 8"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.19.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@release-it/conventional-changelog": "^5.1.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/eslint": "^8.40.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.17",
    "@types/react": "^18.2.9",
    "eslint": "^8.42.0",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-rxjs": "^5.0.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react": "^18.2.0",
    "release-it": "^15.11.0",
    "rxjs": "^7.8.1",
    "typescript": "^5.0.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "section": "Maintenance"
            }
          ]
        }
      }
    }
  }
}
